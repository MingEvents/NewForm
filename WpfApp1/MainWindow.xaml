<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" 

        Height="900"         
        Width="1600" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        ResizeMode="NoResize">

    <Window.Resources>
        
        <!-- Estilo personalizado para TextBox con línea inferior y Hint -->
        <Style TargetType="TextBox" x:Key="UnderlinedTextBox">
            <Setter Property="Template">
                
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            
                            <!-- Texto de sugerencia -->
                            <TextBlock Text="{TemplateBinding Tag}" 
                                       Foreground="Gray" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,0,0" 
                                       IsHitTestVisible="False" 
                                       Visibility="Visible"/>
                            <!-- Caja de texto -->
                            <Border BorderThickness="0,0,0,1" BorderBrush="White">
                                <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="CaretBrush" Value="White" />
            <Setter Property="FontSize" Value="24" />
        </Style>

        <!-- Convertidor para mostrar/ocultar el Hint -->

    </Window.Resources>

    <Grid Background="#576490"  >
        <!-- Fondo con degradado en la parte inferior -->
        <Border Height="130" VerticalAlignment="Bottom" >
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,0">
                    <GradientStop Color="#FF182848" Offset="0" />
                    <GradientStop Color="AliceBlue" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Contenido principal -->
        <DockPanel>
            <!-- Panel superior oscuro -->
            <Border Height="80" Background="#576490" DockPanel.Dock="Top"  />

            <!-- Contenido principal -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,-50,0,0">
                <!-- Panel izquierdo - Imagen -->
                <StackPanel Width="800" HorizontalAlignment="Center">
                    <Image Source="pack://application:,,,/Images/logoIntermodular-Photoroom.png"
                           Width="600"
                           Height="600"
                           Margin="0 0 0 40"
                           Stretch="Fill" />
                </StackPanel>

                <!-- Panel central - Formulario -->
                <StackPanel Width="800" Margin="0 0 40 0">
                    <!-- Título -->
                    <TextBlock Text="User Login"
                               Margin="0 20"
                               Foreground="White"
                               TextAlignment="Center"
                               FontSize="64"
                               FontFamily="pack://application:,,,/Fonts/Rubik-Medium.ttf#Rubik Medium" />

                    <!-- Campo Usuario -->
                    <StackPanel Orientation="Horizontal" Margin="20">
                        <TextBlock Text="User" Foreground="White" VerticalAlignment="Center" Margin="20,0,10,0" />
                        <TextBox x:Name="txtUsername"
                                 Style="{StaticResource UnderlinedTextBox}"
                                 Tag="Enter Username / Email"
                                 Width="600" >
                            <TextBox.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black"/>
                                    <GradientStop Color="White" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBox.Background>
                        </TextBox>
                    </StackPanel>

                    <!-- Campo Contraseña -->
                    <StackPanel Orientation="Horizontal" Margin="20">
                        <TextBlock Text="Password" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <TextBox x:Name="txtPassword"
                                 Style="{StaticResource UnderlinedTextBox}"
                                 Tag="Enter Password"
                                 Width="600" />
                    </StackPanel>

                    <!-- Botón Login -->
                    <Button Width="600" Height="70"
                            BorderThickness="2"
                            BorderBrush="#D94448"
                            Background="#D94448"
                            Foreground="White"
                            ToolTip="Login"
                            x:Name="btnLogin"
                            Content="Login"
                            FontSize="24"
                            Margin="0 20" Click="btnLogin_Click" />

                    <!-- Botón Registro -->
                    <Button Width="400" Height="50"
                            FontSize="18"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="White"
                            ToolTip="Register"
                            x:Name="btnRegister"
                            Content="Don't have an account?" />
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
