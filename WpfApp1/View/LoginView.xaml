<UserControl x:Class="WpfApp1.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WpfApp1.ViewModel"
             xmlns:utils="clr-namespace:WpfApp1.Utilities"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200">
    
    <!-- Asignamos el ViewModel -->
    <UserControl.DataContext>
        <vm:LoginVM />
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Estilo personalizado para TextBox con línea inferior y Hint -->
        <Style TargetType="TextBox" x:Key="UnderlinedTextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <!-- Texto de sugerencia -->
                            <TextBlock Text="{TemplateBinding Tag}" 
                                       Foreground="Gray" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,0,0" 
                                       IsHitTestVisible="False" 
                                       Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringToVisibilityConverter}}" />
                            <!-- Caja de texto -->
                            <Border BorderThickness="0,0,0,1" BorderBrush="White">
                                <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="CaretBrush" Value="White" />
            <Setter Property="FontSize" Value="24" />
        </Style>

        <!-- Estilo personalizado para PasswordBox con línea inferior y Hint -->
        <Style TargetType="PasswordBox" x:Key="UnderlinedPasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid>
                            <!-- Texto de sugerencia -->
                            <TextBlock Text="{TemplateBinding Tag}" 
                                       Foreground="Gray" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,0,0" 
                                       IsHitTestVisible="False" 
                                       Visibility="{Binding Password, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringToVisibilityConverter}}" />
                            <!-- Caja de contraseña -->
                            <Border BorderThickness="0,0,0,1" BorderBrush="White">
                                <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="CaretBrush" Value="White" />
            <Setter Property="FontSize" Value="24" />
        </Style>

        <!-- Convertidor para mostrar/ocultar el hint -->
        <utils:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

        <!-- Definimos el recurso 'LoginButtonGradient' para evitar el error -->
        <LinearGradientBrush x:Key="LoginButtonGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF4F8EF7" Offset="0"/>
            <GradientStop Color="#FFD94448" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Resources>

    <Grid Background="#576490">
        <!-- Fondo con degradado en la parte inferior -->
        <Border Height="91" VerticalAlignment="Top" Margin="0,809,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,0">
                    <GradientStop Color="#FF182848" Offset="0" />
                    <GradientStop Color="AliceBlue" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Contenido principal -->
        <DockPanel>
            <!-- Panel superior oscuro -->
            <Border Height="22" Background="#576490" DockPanel.Dock="Top" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
            </Border>

            <!-- Contenido principal -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,-50,0,0">
                <!-- Panel izquierdo - Imagen -->
                <StackPanel Width="472">
                    <Image Source="pack://application:,,,/Images/logoIntermodular-Photoroom.png"
                           Width="429"
                           Height="411"
                           Margin="0 0 0 40"
                           Stretch="Fill" />
                </StackPanel>

                <!-- Panel derecho - Formulario -->
                <StackPanel Width="513">
                    <!-- Título -->
                    <TextBlock Text="User Login"
                               Margin="0 20"
                               Foreground="White"
                               TextAlignment="Center"
                               FontSize="64"
                               FontFamily="pack://application:,,,/Fonts/Rubik-Medium.ttf#Rubik Medium" />
                    <!-- Campo Usuario -->
                    <StackPanel Orientation="Horizontal" Margin="20">
                        <TextBlock Text="User" Foreground="White" VerticalAlignment="Center" Margin="20,0,10,0" />
                        <TextBox x:Name="txtUsername"
                             Style="{StaticResource UnderlinedTextBox}"
                             Tag="Enter Username / Email"
                             Width="600"
                             Text="{Binding UsernameOrEmail, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <!-- Campo Contraseña -->
                    <StackPanel Orientation="Horizontal" Margin="20">
                        <TextBlock Text="Password" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <PasswordBox x:Name="txtassword"
                                     Width="600"
                                     Tag=""
                                     Style="{StaticResource UnderlinedPasswordBox}"
                                     utils:PasswordHelper.BindablePassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <!-- Botón Login -->
                    <Button Width="400" Height="70"
                        BorderThickness="0"
                        Background="{StaticResource LoginButtonGradient}"
                        Foreground="White"
                        ToolTip="Login"
                        Content="Login"
                        FontSize="24"
                        Margin="0 20"
                        Command="{Binding LoginCommand}">
                        <Button.Resources>
                            <LinearGradientBrush x:Key="LoginButtonGradient" StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF4F8EF7" Offset="0"/>
                                <GradientStop Color="#FFD94448" Offset="1"/>
                            </LinearGradientBrush>
                            <DropShadowEffect x:Key="LoginButtonShadow" BlurRadius="10" ShadowDepth="2" Color="#80000000"/>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource LoginButtonGradient}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="24"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Effect" Value="{StaticResource LoginButtonShadow}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                SnapsToDevicePixels="True"
                                Effect="{TemplateBinding Effect}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFD94448"/>
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect BlurRadius="16" ShadowDepth="4" Color="#B04F8EF7"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#FFB02A37"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!-- Botón Registro -->

                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
